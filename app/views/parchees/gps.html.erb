<h2>パーチー新規登録</h2>
<% form_for @parchee, :url => {:action => 'create'} do |f| -%>
<p>
  <%= f.label :title, 'タイトル' %><br />
  <%= f.text_field :title, :size => 40 %>
</p>
<p>
  <%= f.label :content, '内容' %><br />
  <%= f.text_area :content, :size => "40x3" %>
</p>
<p>
  <%= f.check_box :right_now_flg %>
  <%= f.label :right_now_flg, '今すぐ開催！' %>
</p>
<p>
  <%= f.label :date, '開催日時' %><br />
  <%= f.datetime_select(:date, :start_year => Time.now.year, :use_month_numbers => true ) %>
</p>
<%= f.hidden_field(:user_latitude, :value => @latitude) %>
<%= f.hidden_field(:user_longitude, :value => @longuitude) %>
<%= submit_tag "登録する" %>
<% end -%>
